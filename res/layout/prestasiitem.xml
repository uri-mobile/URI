<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <android.support.v7.widget.CardView
        android:layout_width="550dp"
        android:layout_height="190dp"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:background="#ffffff">

        <TextView
            android:id="@+id/namaevent"
            android:layout_width="438dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/namaevent"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/perolehanmendali"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:text="Perolehan Mendali"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/medaliemas"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:text="Emas        :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/medaliperak"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:text="Perak        :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/medaliperunggu"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:text="Perunggu :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/emas"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="90dp"
            android:text="10"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/perak"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="110dp"
            android:text="10"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/perunggu"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="130dp"
            android:text="10"
            android:textSize="20dp" />




    </android.support.v7.widget.CardView>



</LinearLayout>